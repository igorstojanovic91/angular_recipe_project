{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(eot|svg|cur|jpg|png|webp|gif|otf|ttf|woff|woff2|ani)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "recipes",
      "urls": ["https://ng-course-recipe-book-4477d-default-rtdb.europe-west1.firebasedatabase.app/*"],
      "cacheConfig": {
        "maxSize": 10,
        "maxAge": "6h",
        "timeout": "3s",
        "strategy": "freshness"
      }
    }
  ]
}
